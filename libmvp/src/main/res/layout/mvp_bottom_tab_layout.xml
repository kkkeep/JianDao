<?xml version="1.0" encoding="utf-8"?>
<com.mr.k.libmvp.widget.bottomtab.BottomTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFE1E1E1"
        />

    <com.mr.k.libmvp.widget.bottomtab.BottomTab
        android:id="@+id/mvp_tab_layout_tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/mvp_tab_layout_tab2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent">

        <com.mr.k.libmvp.widget.bottomtab.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/tab_recommend_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="推荐"
            android:textSize="10dp" />
    </com.mr.k.libmvp.widget.bottomtab.BottomTab>

    <com.mr.k.libmvp.widget.bottomtab.BottomTab
        android:id="@+id/mvp_tab_layout_tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/mvp_tab_layout_tab3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mvp_tab_layout_tab1"
        app:layout_constraintTop_toTopOf="@+id/mvp_tab_layout_tab1">

        <com.mr.k.libmvp.widget.bottomtab.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/tab_video_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="视频"
            android:textSize="10dp" />
    </com.mr.k.libmvp.widget.bottomtab.BottomTab>


    <com.mr.k.libmvp.widget.bottomtab.BottomTab
        android:id="@+id/mvp_tab_layout_tab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/mvp_tab_layout_tab4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mvp_tab_layout_tab2"
        app:layout_constraintTop_toTopOf="@+id/mvp_tab_layout_tab2">

        <com.mr.k.libmvp.widget.bottomtab.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/tab_special_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="专题"
            android:textSize="10dp" />
    </com.mr.k.libmvp.widget.bottomtab.BottomTab>

    <com.mr.k.libmvp.widget.bottomtab.BottomTab
        android:id="@+id/mvp_tab_layout_tab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mvp_tab_layout_tab3"
        app:layout_constraintTop_toTopOf="@+id/mvp_tab_layout_tab3">

        <com.mr.k.libmvp.widget.bottomtab.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/tab_mine_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="我的"
            android:textSize="10dp" />
    </com.mr.k.libmvp.widget.bottomtab.BottomTab>
</com.mr.k.libmvp.widget.bottomtab.BottomTabLayout>