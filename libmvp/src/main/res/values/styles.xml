<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CountDownView">
        <attr name="countDownCount" format="integer"/>
        <attr name="countDownText" format="string|reference"/>
        <attr name="countDownTextColor" format="color|reference"/>
        <attr name="countDownInterval" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="MarqueeView">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="speed" format="integer" />
        <attr name="spacing" format="dimension" />
    </declare-styleable>
</resources>